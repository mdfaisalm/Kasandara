<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/download" />

    <ImageView
        android:id="@+id/ivLogoRight"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@id/ivLogo"
        android:src="@drawable/download" />

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLogo"
        android:layout_marginTop="10dp"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAppName"
        android:layout_marginTop="30dp"
        android:text="Email"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEmail"
        android:layout_marginTop="3dp"
        android:background="@drawable/bg_login_et"
        android:backgroundTint="@color/purple_500"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/tvPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEmail"
        android:layout_marginTop="30dp"
        android:text="Password"
        android:textAllCaps="true"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/etPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPass"
        android:layout_marginTop="3dp"
        android:background="@drawable/bg_login_et"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPass"
        android:layout_marginVertical="30dp"
        android:text="Login"
        android:textAllCaps="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogin"
        android:text="Forget Password"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogin"
        android:layout_alignParentEnd="true"
        android:text="Signup"
        android:textColor="@color/black" />

    <View
        android:id="@+id/v1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/tvSignup"
        android:background="@color/black" />

    <View
        android:id="@+id/v2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/tvSignup"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@id/v1"
        android:background="@color/black" />

    <View
        android:id="@+id/v3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/v2"
        android:layout_alignParentEnd="true"
        android:background="@color/black" />

    <View
        android:id="@+id/v4"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/v2"
        android:layout_marginEnd="20dp"
        android:layout_toLeftOf="@id/v3"
        android:background="@color/black" />

    <View
        android:id="@+id/v5"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black" />

    <View
        android:id="@+id/v6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@id/v5"
        android:layout_marginBottom="10dp"
        android:background="@color/black" />

    <View
        android:id="@+id/v7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@id/v5"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/v5"
        android:background="@color/black" />

    <View
        android:id="@+id/v8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@id/v7"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/v7"
        android:background="@color/black" />

</RelativeLayout>